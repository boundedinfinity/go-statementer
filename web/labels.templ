templ newYearLabels() {
	<form id="generate-year" class="flex btn btn-primary btn-outline btn-sm">
		<button
			hx-post="/labels/year"
			hx-target="#generate-year"
			hx-swap="outerHTML"
		>
			Generate Year Labels
		</button>
		<input type="text" name="year" class="ml-4 w-[8ch] input input-xs input-bordered"/>
	</form>
}

templ labelCheckBoxen(labels []*model.SimpleLabel) {
	<div class="flex flex-wrap gap-2">
		for _, label := range labels {
			<div class="btn btn-primary btn-sm" title={label.Description}>
				{ label.Name }
				<input
					type="checkbox"
					class="checkbox checkbox-primary"
					name="label"
					checked?={ label.Checked }
					value={ label.Id.String() }
				/>
			</div>
		}
	</div>
}
